            // const editInterestsToggle = $('#profile-edit_interests--toggle');
            // editInterestsToggle.on('click', () => {
            //     editInterestsToggle.hide();
            //     $('#profile-edit_interests--input, #submit-btn').show();
            // });
        });
    </script>
{% endblock %}