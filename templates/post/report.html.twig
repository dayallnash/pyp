{% extends 'base.html.twig' %}

{% block title %}Pyp | Report Post{% endblock %}

{% block stylesheets %}
    <style>
        #post {
            font-family: 'IBM Plex Mono', monospace;
            font-style: italic;
            font-weight: 300;
        }
    </style>
{% endblock %}

{% block body %}
    <style>
        h5, .username-italic {
            font-family: 'IBM Plex Mono', monospace;
            font-style: italic;
        }
    </style>

    <div class="card" style="min-width: 300px; box-sizing: content-box;">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="card-title">{{ user.username }}</h5>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="card-text">{{ post.getPostContent }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3" style="min-width: 300px; box-sizing: content-box;">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="card-title">Why do you want to report this post?</h5>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ render(controller('App\\Controller\\ReportReasonController::renderReasonTree', {reportReasonParentId: reasonId, postId: post.id})) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}