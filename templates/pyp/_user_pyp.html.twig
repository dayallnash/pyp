{% set float = 'left' %}

{% for post in posts %}
    <div class="row">
        {% if float == 'right' %}
            <div class="col" style="border-right: 1px solid black"></div>
        {% endif %}
        <div class="col">
            <div style="float: {{ float }}; max-width: 45%;">
                {{ render(controller('App\\Controller\\PostController::renderPost', {post: post.post})) }}
            </div>
        </div>
        {% if float == 'left' %}
            <div class="col" style="border-left: 1px solid black;"></div>
        {% endif %}
    </div>

    {% if float == 'left' %}
        {% set float = 'right' %}
    {% else %}
        {% set float = 'left' %}
    {% endif %}
{% endfor %}